<h1>
    Home Page
</h1>

<h2>
    List of Created Events
</h2>
<div>
    <ul>
        <% current_user.created_events.each do |event| %>
            <li><%= event.name %></li>
        <% end %>
    </ul>
</div>

<h2>
    List of Attending Events
</h2>
<h3>
    Upcoming Events
</h3>
<div>
    <ul>
        <% current_user.upcoming_events.each do |event| %>
            <li><%= event.name %></li>
        <% end %>
    </ul>
</div>
<h3>
    Past Events
</h3>
<div>
    <ul>
        <% current_user.past_events.each do |event| %>
            <li><%= event.name %></li>
        <% end %>
    </ul>
</div>